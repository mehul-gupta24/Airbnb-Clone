<% layout('./layouts/boilerplate') %>
<div class="row justify-content-center align-items-center">
    
    <div class="col-8 offset-2">
        <h2 class="mb-3">Signup...</h2>
        <form action="/signup" method="post"  novalidate class="needs-validation">
            <div class="form">
                <label for="username" class="form-label ">Username</label>
                <input name="username" required placeholder="Enter username" id="" type="text" class="form-control">
                <div class="valid-feedback">Username looks good</div>
                <div class="invalid-feedback">Username should be valid</div>
            </div>
            <div class="form">
                <label for="Email" class="form-label">Email</label>
                <input name="email" required placeholder="Enter Email" id="" type="email" class="form-control">
            </div>

            <div class="form">
                <label for="password" class="form-label">password</label>
                <input name="password" required placeholder="Enter password" id="" type="password" class="form-control">
                <div class="valid-feedback">Password looks good</div>
                <div class="invalid-feedback">Password should be valid</div>
            </div>
            <button class="btn btn-success ">SignUp</button>
        </form>
    </div>
</div>